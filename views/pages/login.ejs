<%- include('../partials/header') %>

<section style="padding: 3rem 0; max-width: 500px; margin: 0 auto;">
  <div style="background: var(--card-bg); padding: 2.5rem; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.3);">
    <h2 style="text-align: center; margin-bottom: 1.5rem; color: var(--secondary);">
      <i class="fas fa-lock"></i> Login ke Akun Anda
    </h2>

    <% if (locals.errorMessage) { %>
      <div style="background: #ff3b3b20; color: #ff6b6b; padding: 12px; border-radius: 8px; margin-bottom: 1.25rem;">
        <i class="fas fa-exclamation-circle"></i> <%= errorMessage %>
      </div>
    <% } %>

    <form method="POST" action="/login">
      <div style="margin-bottom: 1.25rem;">
        <input
          type="email"
          name="email"
          placeholder="Email"
          required
          style="width: 100%; padding: 14px; border-radius: 12px; border: 1px solid #333; background: #2a2a3a; color: white; font-size: 1rem;"
        />
      </div>
      <div style="margin-bottom: 1.5rem;">
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
          style="width: 100%; padding: 14px; border-radius: 12px; border: 1px solid #333; background: #2a2a3a; color: white; font-size: 1rem;"
        />
      </div>
      <button type="submit" class="btn btn-primary" style="width: 100%;">
        <i class="fas fa-sign-in-alt"></i> Masuk
      </button>
    </form>

    <p style="text-align: center; margin-top: 1.5rem; color: #aaa;">
      Belum punya akun? <a href="/register" style="color: var(--secondary); text-decoration: none;">Daftar di sini</a>
    </p>
  </div>
</section>

<%- include('../partials/footer') %>